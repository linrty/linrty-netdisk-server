<mapper namespace="top.linrty.netdisk.file.mapper.ShareFileMapper">

    <select id="selectShareFileList" resultType="top.linrty.netdisk.common.domain.vo.file.ShareFileListVO">
        select * from share_file a
        LEFT JOIN share ON share.share_batch_num = a.share_batch_num
        where a.share_batch_num = #{shareBatchNum}
        and a.share_file_path = #{shareFilePath}
    </select>


